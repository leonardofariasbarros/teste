<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fundo_tela_inicial"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leo.superdupermart.TelaInicial">

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/editLogin"
        android:hint="Login"
        android:textSize="22dp"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/editSenha"
        android:hint="Senha"
        android:textSize="22dp"
        android:inputType="textPassword"
        android:layout_alignTop="@+id/editLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_marginTop="14dp"
        android:id="@+id/buttonEntrar"
        android:layout_below="@+id/editSenha"
        android:onClick="entrarClicado"
        android:layout_alignRight="@+id/buttonCadastrar"
        android:layout_alignEnd="@+id/buttonCadastrar"
        android:layout_alignLeft="@+id/buttonCadastrar"
        android:layout_alignStart="@+id/buttonCadastrar" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastre-se"
        android:id="@+id/buttonCadastrar"
        android:onClick="cadastrarClicado"
        android:layout_below="@+id/buttonEntrar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imagLogo"
        android:layout_above="@+id/editLogin"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
